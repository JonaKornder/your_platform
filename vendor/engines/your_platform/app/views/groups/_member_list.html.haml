%table.members.child_users.datatable.display
  %thead
    %tr
      %th=t :last_name
      %th=t :first_name
      %th Aktivitätszahl
      %th.has_tooltip{title: "Die Spalte 'Seit' zeigt an, seit wann die Person in der Liste '#{@group.name}' geführt wird."} Seit
  %tbody
    - for membership in memberships do
      %tr
        %td= membership.user.last_name
        %td= membership.user.first_name
        %td= membership.user.cached_name_suffix
        %td= localize(membership.valid_from.to_date) if membership.valid_from
