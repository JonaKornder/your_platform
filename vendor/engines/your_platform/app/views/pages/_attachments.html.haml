- attachments = page.attachments.order('created_at DESC')
- unless can? :update, page
  - attachments = attachments.find_without_types( "video", "image" )

- # Show attachments box if:
- #   (a) There are attachments.
- #   (b) The user can add attachments,
- #          but there are not blog entries.
- #          (If there are blog entries, it is not clear where to put
- #          the attachment.)
- #
- if (attachments.count > 0) or (can?(:update, page) and not @blog_entries.present?)
  %h1= t :attachments
  %div.attachments
    %table.attachments
      - for attachment in attachments
        = render attachment
    - if can? :manage, page
      %span.add_attachment
        = render partial: 'pages/add_attachment', locals: {page: page}
