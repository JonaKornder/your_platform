- # locals:
- events ||= []
- force_show ||= false
- #
- # helper methods:
- # EventsHelper#group_to_create_the_event_in

- if events.count > 0 || force_show
  %h1.upcoming_events=t :upcoming_events
  %div
    %ul.upcoming_events
      - for event in events do
        - group = event.group
        - corporation = group.try(:corporation)
        %li.upcoming_event
          %span.event.info
            = succeed ',' do
              %span{class: "event start_at_date"}= localize event.start_at.to_date, :format => :long
            -# = link_to localize(event.start_at.to_date, :format => :long),  events_path(start_at_date: event.start_at.to_date)
            = succeed ',' do 
              %span{class: "event start_at_time"}= localize event.start_at, :format => :time
            - if group
              %span{class: "event group"}
              = link_to group.name, group
              - if corporation && (corporation.id != group.id)
                = surround '(', ')' do
                  = link_to corporation.token, corporation
          %span{class: "event name"}
            %strong
              = link_to event.name, event
    - if group_to_create_the_event_for && can?(:create_event, group_to_create_the_event_for)
      %p.right
        %a.btn#create_event{href: events_path(group_id: group_to_create_the_event_for.id, format: 'json')}
          %i.icon-calendar
          =t :add_event_for
          = surround "'", "'" do
            = group_to_create_the_event_for.name
