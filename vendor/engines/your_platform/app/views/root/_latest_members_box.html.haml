%div.box.right
  %div.head
    %h2= box_heading
  %div.divider
  %div.content
    %ul
      - if group
        - for membership in group.cached_latest_memberships.last(3)
          %li
            = "#{link_to(membership.user.cached_title, membership.user)},".html_safe
            = localize membership.cached_valid_from.to_date
        %p
          = "Insgesamt #{group.cached_memberships_this_year.count} dieses Jahr."
        %p.list_all
          = link_to I18n.t(:show_all), group